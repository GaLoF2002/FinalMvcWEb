<main>
    <form action="/editar-perfil" method="post" class="default-form">
        <div class="campo">
            <label>Nombre</label>
            <input type="text" value="{{usuario.nombre}}" name="nombre" placeholder="Tu nombre nuevo" required>
        </div>
        <div class="campo">
            <label>Email</label>
            <input type="email" value="{{usuario.email}}" name="email" placeholder="Tu email nuevo" required>
        </div>
          <div class="campo">
            <label>Password</label>
            <input type="password" name="password" placeholder="Tu Password">
        </div>
        <div class="campo">
            <input type="submit" class="btn btn-azul" value="Guardar Cambios">
        </div>
    </form>
</main>
