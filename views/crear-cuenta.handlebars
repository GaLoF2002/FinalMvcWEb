<main class="contenedor">
    <form action="/crear-cuenta" method="post" class="default-form" form>

    <div class="campo">
        <label>Nombre</label>
        <input type="text" name="nombre" placeholder="Nombre" required >
    </div>
     <div class="campo">
        <label>Email</label>
        <input type="email" name="email" placeholder="email" required>
        
    </div>
     <div class="campo">
        <label>Password</label>
        <input type="password" name="password" placeholder="password" required>
    </div>
     <div class="campo">
        <label>Repetir Password</label>
        <input type="password" name="confirmar" placeholder="Tu password" required>
    </div>

    <div class="campo acciones">
        <a href="/iniciar-sesion">Volver a iniciar-sesion</a>
    </div>


    <div class="campo centrar'horizontal">
        <input type="submit" value="Crear Cuenta" class="btn btn-verde">

    </div>
     </form>

</main>